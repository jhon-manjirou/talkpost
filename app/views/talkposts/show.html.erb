<div class="row">
  <aside class="col-md-4">
    <section class="talkpost_form">
        <h2><%= render 'shared/talkpost_form' %></h2>
    </section>
    <section class="submenu">
      <%= render 'submenu' %>
    </section>
  </aside>
  <div class="col-md-8">
      <% if @talkposts.any? %>
        <%= paginate @talkposts %>
        <h3>Total posted:<%= @talkposts.count %> </h3>
        <ol class="talkposts">
          <%= render @talkposts %>
        </ol>
      <% end %>
  </div>
</div>